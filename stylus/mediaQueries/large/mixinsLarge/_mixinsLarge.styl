mixinButtonsHeader()
    height: 53%
    width: 90%
    display: flex
    justify-content: center
    justify-self: center
    align-self: center
    align-items: center
    border-radius: 50px

mixinButtonsStyles(fontcolor, width=30%, height=30px)
    mixinButtonsHeader()
    width: width;
    height height 
    border-radius: 50px;
    border: 1px solid color-principal;
    color: fontcolor;
    font-weight: 900;
    font-size: 14px;

mixinNavbar()
    width: 100%
    height: 100%
    display: grid
    grid-template-columns: repeat(5, 90px) 160px