mixinBoxNavbar(size=14px, height=40px)
    width: 100%
    height: height
    display: flex
    justify-content: center
    align-items: flex-end
    font-size: size
    font-weight: 900
    opacity: 0.6

mixinBoxActive()
    border-bottom: 2px solid color-principal

mixinTextNoticePrincipal(marginBottom)
    padding: 0 20px
    color: white
    position: absolute
    bottom: marginBottom

mixinFooterButtons()
    height: 53%
    width: 90%
    display: flex
    justify-content: center
    justify-self: center
    align-self: center
    align-items: center
    border-radius: 50px

mixinAnclasFooter(fontColor)
    color: fontColor
    font-weight: 900
    font-size: 14px