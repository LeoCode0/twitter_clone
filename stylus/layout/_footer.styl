.footer
    position: fixed
    bottom: 0
    width: 100%
    height: 50px
    background-color: white
    border-top: 1px solid rgb(230, 236, 240)
    &__container
        width: 100%
        height: 50px
        display: grid
        grid-template-columns: 50% 50%
        &--login
            mixinFooterButtons()
            border: 1px solid color-principal
            mixinAnclasFooter(color-principal)
            
        &--register
            mixinFooterButtons()
            background-color: rgb(29, 161, 242)
            color: white
            mixinAnclasFooter(white)