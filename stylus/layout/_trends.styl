.trends
    margin-top: 30px
    &__principal
        position: relative
        width: 100%
        height: 200px
        &--img
            position: absolute
            width: 100%
            height: 200px
        &--container
            position relative
            height: 200px
            width: 100%
            background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.7));
        &--span
            color: white
            position: absolute
            bottom: 80px
            padding: 0 20px
        &--title
            padding: 0 20px
            color: white
            position: absolute
            bottom: 15px
            font-weight: 900
    &__today
        margin-top: 20px