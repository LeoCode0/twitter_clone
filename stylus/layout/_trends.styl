.trends
    margin-top: 30px
    background-color: rgb(230, 236, 240)
    &__principal
        position: relative
        width: 100%
        height: 200px
        margin-bottom: 12px
        &--img
            position: absolute
            width: 100%
            height: 200px
        &--container
            position relative
            height: 200px
            width: 100%
            background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.7));
        &--span
            mixinTextNoticePrincipal(80px)
        &--title
            mixinTextNoticePrincipal(30px)
            font-weight: 900
    &__today
        width: 100%
        height: 80px
        border-bottom: 11px solid rgb(230, 236, 240)
        &--topic, &--tweetsCount
            opacity 0.7
            font-size: 14px
        &--title
            margin: 2px 0
            font-size: 16px
        &--details
            display: flex
            justify-content: space-between

.container
    background-color: white
    padding: 10px 14px 0 14px
    height: 100%
    & i
        opacity: 0.4