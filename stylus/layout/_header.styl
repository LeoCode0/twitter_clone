.header
    height: 60px
    width: 100%
    display: grid
    grid-template-columns: 15% 70% 15%
    margin-top: 10px
    &__icon 
        width: 70%
        height: 70%
        border-radius: 30px
        display: flex
        justify-content: center
        align-items: center
        align-self: center
        justify-self: center
        &:hover
            background-color: color-opacity
        & i
            color: color-principal
            font-size: 24px
    &__menu
        width: 80%
        height: 80%
        display: flex
        justify-content: center
        align-items: center
        align-self: center
        border-radius: 30px
        justify-self: center
        &:hover
            background-color: color-opacity
        & i
            color: color-principal
            font-size: 32px
    &__search
        width: 100%
        display: flex
        justify-content: center
        align-items: center
        & input
            height: 35px
            width: 95%
            padding-left: 50px
            border: 0px solid black
            border-radius: 40px
            background-color: rgb(230, 236, 240)
            outline: none
        & i
            position: absolute
            left: 18%
            font-size: 22px
            opacity: 0.4